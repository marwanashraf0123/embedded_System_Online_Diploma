#include <stdio.h>
#include <stdlib.h>

int main(void) {

	int n,i;
double fact=1;
	printf("Enter an integer: ");
	fflush(stdout);
	scanf("%d",&n);

	if(n>0)
	{
		for(i=1;i<=n;i++)
		{
			fact *= i;
		}
		printf("%d Factorial = %lf ",n,fact);

	}else if(n==0)
	{
		printf("0 Factorial = 1 ");
	}else{
		printf("Error!!! Factorial of negative number doesn't exist.");
	}





	return EXIT_SUCCESS;
}
